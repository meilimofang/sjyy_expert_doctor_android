<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="头像"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="right" >

            <ImageView
                android:id="@+id/iv_update_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/addimage" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#fff" >

        <EditText
            android:id="@+id/et_update_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="姓名"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#fff" >

        <EditText
            android:id="@+id/et_update_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="电话"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:id="@+id/ll_update_department"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:gravity="center" >

        <EditText
            android:id="@+id/et_update_department"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="科室"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/down_hui" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:id="@+id/ll_update_professiona"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:gravity="center" >

        <EditText
            android:id="@+id/et_update_professiona"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="职称"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/down_hui" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff" >

        <EditText
            android:id="@+id/et_update_saying"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="建言"
            android:inputType="number"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff" >

        <EditText
            android:id="@+id/et_update_skill"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="专业技能"
            android:inputType="number"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff" >

        <EditText
            android:id="@+id/et_update_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="医学背景"
            android:inputType="number"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="#333333"
            android:textColorHint="#bebebe"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/hui6" />

</LinearLayout>