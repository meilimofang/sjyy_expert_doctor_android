<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_my_needs"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/xuqiuliebiao"
                     />

                <Button
                    android:id="@+id/bt_my_reservation"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/yuyueliebiao_click"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mycall_zhuti"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

                <com.example.sjyy_expert_android.util.XListView
                    android:id="@+id/lv_seeking"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" >
                </com.example.sjyy_expert_android.util.XListView>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/comm_bg_loadingfail" />
         <include layout="@layout/common_no_data" />
    </FrameLayout>

</LinearLayout>